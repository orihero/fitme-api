{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "typeRoots": [
      "node_modules/yup",
      "node_modules/passport"
    ],
    "noImplicitAny": false
  }
}